<section class="post row">
  <div class="poster">
    <%= image_tag('default_user.png') %>
    <div class="post-details">
      <%= link_to post.author.full_name, post.author %>
      <p class='timestamp'>
        Posted on <%= post.created_at %>
      </p>
    </div>
  </div>
  <p class='post-text'>
    <%= post.content %>
  </p>
  <footer>
    <div class="post-options">

      <%= render partial: 'post_footer', locals: { post: post, user: user } %>

    </div>
  </footer>
</section>