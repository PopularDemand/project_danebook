<section class="post row">
  <div class="poster">
    <%= image_tag(user.profile.profile_pic) %>
    <div class="post-details">
      <%= link_to post.author.full_name, post.author %>
      <p class='timestamp'>
        Posted on <%= post.created_at %>
      </p>
    </div>
  </div>
  <p class='post-text'>
    <%= post.content %>
  </p>
  <footer>
    <div class="post-options">

      <!-- post like/unlike -->
      <%= render partial: 'post_footer', locals: { post: post, user: user } %>
      
      <!-- list of self contained comments with form -->
      <div class="comments">
        <%= render partial: 'comments/comments', locals: { post: post, user: user } %>
        
        <%= render partial: 'comments/comment_form', locals: { post: post, user: user } %>
      </div>

    </div>
  </footer>
</section>