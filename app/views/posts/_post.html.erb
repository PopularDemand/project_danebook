<section class="post row">
  <div class="poster">
    <%= image_tag('default_user.png') %>
    <div class="post-details">
      <%= link_to post.author.full_name, post.author %>
      <p class='timestamp'>
        Posted on <%= post.created_at %>
      </p>
    </div>
  </div>
  <p class='post-text'>
    <%= post.content %>
  </p>
  <footer>
    <div class="post-options">
      <a href="#">Like</a>
      <a href="#">Comment</a>
      <% if @user == current_user %>
        <%= link_to "Delete", user_post_path(current_user, post), method: :delete, class: 'delete-post' %>
      <% end %>
      <!-- <a href="#" class="delete-post">Delete</a> -->
    </div>
  </footer>
</section>