 </nav>
    <%= render "shared/flash_messages" %>
  <main class="container">
    <div class="row">

      <!-- Connect with friends -->
      <section class="connect col-md-7">
        <article class="content">
          <h1>Connect with all your friends</h1>
          <ul>
            <li>See photos and updates in your news feed</li>
            <li>Post your status for the world to see from your profile</li>
            <li>Get in touch with your friends by "friending" them</li>
            <li>Like things because you're a positive person!</li>
          </ul>
        </article>
      </section>

      <!-- Sign up -->

      <section class="sign-up col-md-4">
        <h1>Sign Up</h1>
        <aside class="sign-up-form">
          <%= form_for(@user) do |f| %>
            <%= f.text_field :first_name,
              class: "name-field first-name",
              placeholder: "First Name"
            %>
            <%= f.text_field :last_name,
              class: "name-field",
              placeholder: "Last Name"
            %>
            <%= f.text_field :email,
              class: "wide-input",
              placeholder: "Email"
            %>
            <%= f.password_field :password,
              class: "wide-input",
              placeholder: "Password"
            %>
            <%= f.password_field :password_confirmation,
              class: "wide-input",
              placeholder: "Confirm Your Password"
            %>

            <%= f.fields_for :profile, @profile do |profile_builder| %>
              <h2>Birthday</h2>
              <%= profile_builder.date_select :birthday, start_year: 1900 %>

              <div>
                <%= profile_builder.label :sex do %>
                  <%= profile_builder.radio_button :sex, "female" %>
                  Female
                <% end %>
                <%= profile_builder.label :sex do %>
                  <%= profile_builder.radio_button :sex, "male" %>
                  Male
                <% end %>
              </div>
            <% end %>

            <%= f.submit "Sign Up", class: 'btn btn-block btn-success' %>
          <% end %>



          </form>
        </aside>
      </section>

    </div>
  </main>
</nav>
